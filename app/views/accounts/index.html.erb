<p id="notice"><%= notice %></p>

<h1>Listing Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Nature of the</th>
      <th>Balance</th>
      <th>Credit balance</th>
      <th>Debit balance</th>
      <th>Plano de Contas</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @accounts.each do |account| %>
      <tr>
        <td><%= account.code %></td>
        <td><%= account.name %></td>
        <td><%= account.description %></td>
        <td><%= account.nature_of_the %></td>
        <td><%= account.balance %></td>
        <td><%= account.credit_balance %></td>
        <td><%= account.debit_balance %></td>

        <!-- PEGANDO RELACIONAMENTO DO PLANO DE CONTAS -->
        <td><%= account.chart_of_account.title %></td>


        <td><%= link_to 'Show', account %></td>
        <td><%= link_to 'Edit', edit_account_path(account) %></td>
        <td><%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


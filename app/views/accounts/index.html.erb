<div class="container">
  <div  class="row">
    <p id="notice"><%= notice %></p>

    <h1>Listing Accounts</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Code</th>
          <th>Name</th>
          <th>Description </th>
          <th>Balance </th>
          <th>Account type </th>

          <th colspan="3">Ações </th>
        </tr>
      </thead>

      <tbody>
        <% @accounts.each do |account| %>
        <tr>
          <td><%= account.account_type.code %>.<%= account.code %> </td>
          <td><%= account.name %></td>
          <td><%= account.description %></td>

          <td><%= account.balance %></td>
          <td><%= account.account_type.name %></td>

          <td><%= link_to 'Show', account, class: "btn-primary btn-sm" %>
            <%= link_to 'Edit', edit_account_path(account), class: "btn-primary btn-sm" %>
            <%= link_to 'Destroy', account, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-primary btn-sm" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Account', new_account_path, class: "btn btn-primary" %>

    </div>
  </div>

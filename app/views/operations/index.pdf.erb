<!doctype html>
<html>
 <head>
   <meta charset='utf-8' />
   <%= wicked_pdf_stylesheet_link_tag "pdf" -%>
   <%= wicked_pdf_javascript_include_tag "number_pages" %>
   <%= stylesheet_link_tag "pdf.scss" %>
 </head>

 <body onload='number_pages'>
<div class="container-fluid">
   <h1 class="page-header text-center"><strong><%= Company.last.name %></strong>
   <p class="page-header text-center" > CNPJ: <%= Company.last.cnpj%></p>
   <p class="page-header text-center" ><%= Company.last.address%></p>
   <p class="page-header text-center" >CEP:<%= Company.last.cep%></p>
</h1>
 <div class="row">
   <div class="panel panel-default">
     <table class="table table-bordered2">
     <thead>
       <tr>
     <th><div class="panel-heading text-center"><strong>Livro Diário</strong></div></th>
   </tr>
     <table class="table1">
     <thead>
         <tr class="linha">
           <th class="borda">Data</th>
           <th class="borda">Número da Operação</th>
           <th class="borda">Conta a Débito</th>
           <th class="borda">Conta a Crédito</th>
           <th class="borda">Histórico</th>
         </tr>
     </thead>
       <br>
         <br>
         <% if @operations %>
         <% @operations.sort_by{|op| op.id }.each do |op| %>
       <tbody >
           <tr>
           <td class="borda1"><%= op.release_date.strftime("%d/%m/%Y") %></td>
           <td class="borda1"><%= op.id %></td>
           <td class="borda1"><%= op.retrieve_account.name %></td>
           <td class="borda1"><%= op.release_account.name %></td>
           <td class="borda1"><%= number_to_currency(op.value, unit: "R$", separator: ",", delimiter: ".")  %></td>
         </tr>
         </tbody>
       <% end %>
       <% end %>
         </table>
        </div>
      </div>
    </div>
  </body>
</html>

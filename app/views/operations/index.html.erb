<div class="container-fluid">
  <div class="row">
    <div class="col-md-12">
      <h1><strong>Livro Diário</strong></h1>
    </div>
  </div>
  <div class="row">
    <div class="col-md-12">
      <div class="col-md-6 pull-right">Buscar por periodo <%= form_tag(ledger_path, :method => "get", id: "date_search") do %>

        <%= text_field_tag :date_init, params[:date_init], placeholder: "Periodo inicial",  class: "input-sm date"%>
        <%= text_field_tag :date_final, params[:date_final], placeholder: "Periodo final",  class: "input-sm date"%>

        <%= submit_tag "Buscar", :created_at => nil %>

        <% end %>
      </div>
    </div>

  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      <div class="panel panel-default">
        <div class="panel-heading text-center"><strong><%= Company.last.name if Company.last %></strong></div>
        <table class="table ">
          <thead>
            <tr>
              <th>Data</th>
              <th>Numero da Operação</th>
              <th>Conta a Débito </th>
              <th>Conta a Crédito</th>
              <th>Histórico</th>

              <th colspan="3"></th>
            </tr>
          </thead>
          <% if @operations %>

          <% @operations.sort_by{|op| op.id }.each do |op| %>
          <tbody>

            <tr>
              <td><%= op.release_date.strftime("%d/%m/%Y") %></td>
              <td><%= op.id %></td>
              <td><%= op.retrieve_account.name %></td>
              <td><%= op.release_account.name %></td>
              <td>
                <%= number_to_currency(op.value, unit: "R$", separator: ",", delimiter: ".")  %>
              </td>
                <% if op.unauthorized? %>
                <td><%= link_to 'Autorizar', authorize_operation_path(op.id), method: :post, class: "btn-primary btn-sm" %></td>
                <% else %>
                <td><%= link_to 'Lançado', '#', class: "btn-success btn-sm" %></td>
                <% end %>
                <td><%= link_to 'Desfazer', op, method: :delete, data: { confirm: 'Você tem certeza que deseja desfazer a operação? O valor da operação será creditado/debitado nas respectivas contas.' }, class: "btn-danger btn-sm" %></td>
            </tr>
          </tbody>
          <% end %>
          <% end %>

          </table>
        </div>
      </div>
    <div class="col-md-12"><%= will_paginate @operations, class: "apple_pagination" %></div>
  </div>
  <%= link_to 'Gerar relatório', operations_path(@operation, format: 'pdf'), class: "btn btn-primary" %>

</div>

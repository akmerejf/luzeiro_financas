<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <h1>Listing Operations</h1>


    <div class="table-responsive">
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Value</th>
            <th>Description</th>
            <th>Release date</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @operations.each do |operation| %>
            <tr>
              <td><%= operation.value %></td>
              <td><%= operation.description %></td>
              <td><%= operation.release_date %></td>
              <td><%= link_to 'Show', operation, class: "btn btn-primary" %>
              <%= link_to 'Edit', edit_operation_path(operation), class: "btn btn-primary" %>
              <%= link_to 'Destroy', operation, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>


    </div>
    <br>

    <%= link_to 'New Operation', new_operation_path, class: "btn btn-primary" %>

  </div>
</div>

<!-- Modal-->
<div class="modal" id="o<%= locals[:operation].id %>" tabindex="-1" role="dialog" aria-labelledby="operationDetails" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">
          <i class="text-danger fa fa-times"></i>
        </button>

        <h4 class="modal-title" id="operationDetails">
          <i class="text-muted fa fa-users"> <%= locals[:operation].id %></i>  
        </h4>
      </div>

      <div class="modal-body">
        <div class="row">
          <div class="col-sm-6">
            <p><b>Operação:</b> <%= locals[:operation].id %></p>
            <p><b>Data da Operação: </b><%= locals[:operation].operation_date.strftime("%d/%m/%Y") if locals[:operation].operation_date%></p>

            <p><b>Conta à Débito: </b><%= link_to "#{locals[:operation].retrieve_account.code} #{locals[:operation].retrieve_account.name}",
               account_path(locals[:operation].retrieve_account) %></p>

            <p><b>Conta à Crédito: </b><%= link_to "#{locals[:operation].release_account.code} #{locals[:operation].release_account.name}",
               account_path(locals[:operation].release_account) %></p>
               
            <p><b>Valor: </b><%= number_to_currency(locals[:operation].value, unit: "R$", separator: ",", delimiter: ".")  %></p>
            
          </div>
          <div class="col-sm-6">
            <div class="text-right">
              Cadastrado em: <br/> 
            <span class="h3 text-muted"><strong> <%= locals[:operation].created_at.strftime("%d/%m/%Y") %> </strong></span></span> 
              
            </div> 
            <div class="text-right">
                atualizado em: <br/> 
                <span class="h3 text-muted"><strong><%= locals[:operation].updated_at.strftime("%d/%m/%Y") %></strong></span>
            </div>
          </div>
        </div>
      </div>

      <div class="modal-footer">               
        <div class="pull-right">
        <%= link_to icon('pencil','Editar'), edit_operation_path(locals[:operation]), class: "btn btn-primary"%>
        </div>
      </div>
    </div>
  </div>
</div>
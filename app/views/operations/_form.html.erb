<div class="container">
  <div class="row">
    <%= form_for(@operation) do |f| %>
      <% if @operation.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@operation.errors.count, "error") %> prohibited this operation from being saved:</h2>
          <ul>
          <% @operation.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      <% end %>
      <div class="field">
        <%= f.label :release_date %><br>
        <%= f.datetime_field :release_date, "data-provide" => 'datepicker', placeholder: Time.now.strftime("%d/%m/%Y") %>
      </div>

      <div class="field">
        <%= f.label :value %><br>
        <%= f.text_field :value %>
      </div>
      <div class="field">
        <%= f.label :description %><br>
        <%= f.text_field :description %>
      </div>

     <!-- <div class="field">
        <div>Para onde vai</div>
        <%= f.collection_select :account_ids, Account.order("name"), :id, :name, {},
        {:multiple => true} %>
      </div> -->
      
      <div class="actions">
        <%= f.submit :class => "btn btn-success"%>
      </div>
    <% end %>

  </div>
</div>

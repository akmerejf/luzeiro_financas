<div class="container-fluid">
<div class="row">
	<div class="col-md-4"><h1><strong>Livro Diário</strong></h1></div>
	<div class="col-md-4"><h3 class="page-header"><strong>Busca por período</strong></h3></div>
	<div class="col-md-4"><h3 class="page-header"><strong>Busca por operação</strong></h3></div>
	</div>
	<div class="row">
		<div class="panel panel-default">
			<div class="panel-heading text-center"><strong><%= Company.last.name %></strong></div>
			<table class="table ">
				<thead>
					<tr>
						<th>Data</th>
						<th>Numero da Operação</th>
						<th>Conta a Débito </th>
						<th>Conta a Crédito</th>
						<th>Histórico</th>

						<th colspan="3"></th>
					</tr>
				</thead>
				<% @operations.each do |op| %>	
				<tbody>
					
					<tr>
						<td><%= op.release_date %></td>
						<td><%= op.id %></td>
						<td><%= op.verify_account(op.retrieve_account) %></td>
						<td><%= op.verify_account(op.release_account) %></td>
						<td>
						<% if  op.release_account.synthetic_account.account.account_type.code != 0 %><%= op.value%>
						<% end %></td>

						
					</tr>
				</tbody>
				<% end %>

			</table>
		</div>

	</div>

</div>

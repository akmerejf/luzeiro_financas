<div class="container">
  <div  class="row">
    <p id="notice"><%= notice %></p>

    <h1>Listing Analytics accounts</h1>

    <table class="table">
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Balance</th>
      <th>Second Synthetic account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @analytic_accounts.each do |analytic_account| %>
      <tr>
        <td><%= analytic_account.second_synthetic_account.synthetic_account.account.account_type.code %>.<%= analytic_account.second_synthetic_account.synthetic_account.account.code %>.<%= analytic_account.second_synthetic_account.synthetic_account.code %>.<%= analytic_account.second_synthetic_account.code %>.<%= analytic_account.code %></td>
        <td><%= analytic_account.name %></td>
        <td><%= analytic_account.description %></td>
        <td><%= analytic_account.balance %></td>
        <td><%= analytic_account.second_synthetic_account.name %></td>
        <td><%= link_to 'Show', analytic_account, class: "btn-primary btn-sm" %>
        <%= link_to 'Edit', edit_analytic_account_path(analytic_account), class: "btn-primary btn-sm" %>
        <%= link_to 'Destroy', analytic_account, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-primary btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Analytic account', new_analytic_account_path, class: "btn btn-primary " %>

<!doctype html>
<html>
 <head>
   <meta charset='utf-8' />
   <%= wicked_pdf_stylesheet_link_tag "pdf" -%>
   <%= wicked_pdf_javascript_include_tag "number_pages" %>
   <%= stylesheet_link_tag "pdf.scss" %>
 </head>
 <div id="content">
 <body onload='number_pages'>
 <div id="header">
   <%= wicked_pdf_image_tag 'mysite.jpg' %>

   <%= yield %>
   </div>
 </div>
<div class="container-fluid">
   <h1 class="page-header text-center"><strong><%= Company.last.name %></strong>
   <p class="page-header text-center" > CNPJ: <%= Company.last.cnpj%></p>
   <p class="page-header text-center" ><%= Company.last.address%></p>
   <p class="page-header text-center" >CEP:<%= Company.last.cep%></p>
</h1>
 <div class="row">
   <div class="panel panel-default">
     <table class="table table-bordered2">
     <thead>
       <tr>
     <th><div class="panel-heading text-center"><strong>Livro Razão</strong></div></th>
   </tr>
     <table class="table table-bordered">
       <p class = "page-header text-right font-size"><strong> Conta contabil: <%= @analytic_account.code%></strong><%= @analytic_account.name %></p>
     <thead>
         <tr>
           <th>Data</th>
           <th>Contrapartida</th>
           <th>Histórico</th>
           <th>Número da Operação</th>
           <th>Débito</th>
           <th>Crédito</th>
           <th>Saldo</th>
         </tr>
       </thead>
       <% @operations.sort_by{|task| task.id}.each do |op| %>
       <tbody>
           <tr>
           <td><%= op.release_date.strftime("%d/%m/%Y") %></td>
         <!--   -->
           <% if op.release_account.eql?(@analytic_account)%>
           <td><%= op.retrieve_account.name %></td>
           <% else %>
           <td><%= op.release_account.name %></td>
           <% end %>
           <td><%= op.description %></td>
           <td align= "center"><%= op.id %></td>
           <td><%= number_to_currency(op.value, unit: "R$", separator: ",", delimiter: ".") if op.retrieve_account.eql?(@analytic_account) %></td>
           <td><%= number_to_currency(op.value, unit: "R$", separator: ",", delimiter: ".") if op.release_account.eql?(@analytic_account) %></td>
           <td><%=number_to_currency(OldBalance.find_by(operation: op,
            analytic_account: @analytic_account).value, unit: "R$", separator: ",", delimiter: ".") %></td>

         </tr>
         </tbody>
       <% end %>
       <tr><tr><tr><tr><tr><tr><td><td><td><td><td><td><strong>Total: </strong><td>
       <strong><%= @analytic_account.balance%></strong></td></tr>
         </table>


   </div>

 </div>

</div>

</body>
</html>

<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <h1>Listing Companies</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Cnpj</th>
          <th>Field of work</th>
          <th>Address</th>
          <th>Cep</th>
          <th>User</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @companies.each do |company| %>
        <tr>
          <td><%= company.name %></td>
          <td><%= company.cnpj %></td>
          <td><%= company.field_of_work %></td>
          <td><%= company.address %></td>
          <td><%= company.cep %></td>
          <td><%= company.user %></td>
          <td><%= link_to 'Show', company, class: "btn-primary btn-sm" %>
          <%= link_to 'Edit', edit_company_path(company), class: "btn-primary btn-sm" %>
          <%= link_to 'Destroy', company, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn-primary btn-sm" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>

    <br>

    <%= link_to 'New Company', new_company_path, class: "btn btn-primary" %>

  </div>
</div>

<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>

    <h1>Empresas</h1>

    <div class="table-responsive">
          <table class="table table-striped">
            <thead>
              <tr>
                <th>Name</th>
                <th>Cnpj</th>
                <th>Field of work</th>
                <th colspan="3"></th>
              </tr>
            </thead>

            <tbody>
              <% @enterprises.each do |enterprise| %>
                <tr>
                  <td><%= enterprise.name %></td>
                  <td><%= enterprise.cnpj %></td>
                  <td><%= enterprise.field_of_work %></td>
                  <td><%= link_to 'Show', enterprise %></td>
                  <td><%= link_to 'Edit', edit_enterprise_path(enterprise) %></td>
                  <td><%= link_to 'Destroy', enterprise, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
    </div>

    <br>

    <%= link_to 'New Enterprise', new_enterprise_path, class: "btn btn-primary" %>

  </div>
</div>

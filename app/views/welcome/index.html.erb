<div class="container-fluid">

	<div class="panel panel-default">
		<div class="panel-heading">Empresas</div>
		<table class="table">
		  <thead>
		    <tr>
		      <th>Nome</th>
		      <th>CNPJ</th>
		      <th>Ramo de trabalho</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>

		  <tbody>
		    <% @companies.each do |company| %>
		      <tr>
		        <td><%= company.name %></td>
		        <td><%= company.cnpj %></td>
		        <td><%= company.field_of_work %></td>
		        <td><%= link_to 'Show', company, class: "btn btn-primary" %></td>
		      </tr>
		    <% end %>
		  </tbody>
		</table>
	</div>


	<h1 class="page-header"><strong>Dashboard</strong></h1>
	<div class="row">
		<div class="col-lg-3 col-md-6">
			<div class="panel panel-primary">
				<div class="panel-heading">
					<div class="row">
						<div class="col-xs-3">
							<%= icon('suitcase', class: 'strong aumentaicon')%>
						</div>
						<div class="col-xs-9 text-right">
							<%= link_to "Empresas", companies_path, :class => "huge" %>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6">
			<div class="panel panel-yellow">
				<div class="panel-heading">
					<div class="row">
						<div class="col-xs-3">
							<%= icon('archive', class: 'strong aumentaicon')%>
						</div>
						<div class="col-xs-9 text-right">
							<%= link_to "Contas", first_levels_path, :class => "huge"%>
						</div>
					</div>
				</div>
			</div>
		</div>


		<div class="col-lg-3 col-md-6">
			<div class="panel panel-green">
				<div class="panel-heading">
					<div class="row">
						<div class="col-xs-3">
							<%= icon('users', class: 'strong aumentaicon')%>
						</div>
						<div class="col-xs-9 text-right">
							<%= link_to "Grupos", second_levels_path, :class => "huge"%>
						</div>
					</div>
				</div>
			</div>
		</div>

		<div class="col-lg-3 col-md-6">
			<div class="panel panel-red">
				<div class="panel-heading">
					<div class="row">
						<div class="col-xs-3">
							<%= icon('money', class: 'strong aumentaicon')%>
						</div>
						<div class="col-xs-9 text-right">
							<%= link_to "Operações", second_levels_path, :class => "huge"%>
						</div>
					</div>
				</div>
			</div>
		</div>

	</div>


	<div class="row centralizado">
		<div class="col-md-12">
			<div class="btn btn-default btn-lg">Ver Saldo em Caixa</div>
			<div class="btn btn-default btn-lg">Gerar Relatório</div>
			<div class="btn btn-default btn-lg">Cadastrar Empresa</div>
			<div class="btn btn-default btn-lg">Cadastrar Operação</div>
			<div class="btn btn-default btn-lg">Cadastrar Conta</div>
			<div class="btn btn-default btn-lg">Calculadora</div>
		</div>
	</div>




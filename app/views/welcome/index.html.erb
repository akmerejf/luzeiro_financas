<div class="container-fluid">
	<div class="col-md-12">
		<div class="panel panel-primary">
			<div class="panel-heading">
				<div class="row">
					<div class="col-xs-3">
						<%= icon('dashboard', class: 'strong aumentaicon')%>
					</div>
					<div class="col-xs-9 text-right">
						<%= link_to "Dashboard", "#", :class => "huge" %>
					</div>
				</div>
			</div>
			<table class="table">
				<thead>
					<tr>
						<th>Código</th>
						<th>Nome</th>
						<th>Saldo</th>
						<th></th>
					
					</tr>
				</thead>

				<tbody>
					<% @analytic_accounts.each do |analytic_account| %>
					<tr>
						<td><%= analytic_account.synthetic_account.account.account_type.code %>.<%= analytic_account.synthetic_account.account.code %>.<%= analytic_account.synthetic_account.code %>.<%= analytic_account.code %></td>
						<td>
							<%= button_to analytic_account.synthetic_account.account.account_type.name, account_type_path(analytic_account.synthetic_account.account.account_type), class: "btn btn-primary btn-outline btn-xs",method: :get%>
						  <%= button_to analytic_account.synthetic_account.account.name.downcase, account_path(analytic_account.synthetic_account.account), class: "btn btn-success btn-outline btn-xs",method: :get%>
							<%= button_to analytic_account.synthetic_account.name.downcase, synthetic_account_path(analytic_account.synthetic_account), class: "btn btn-warning btn-outline btn-xs",method: :get%>
						  <%= button_to analytic_account.name.downcase, analytic_account_path(analytic_account), class: "btn btn-danger btn-outline btn-xs",method: :get%>
						<td><%= analytic_account.balance %></td>
						<td><%= link_to 'Show', analytic_account, class: "btn btn-primary btn-sm" %>
						<%= link_to 'Ver Livro Razão', analytic_ledger_path(analytic_account), class: "btn btn-primary btn-sm" %></td>
						

					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>



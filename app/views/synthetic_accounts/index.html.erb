<h1>Listing Synthetic Accounts</h1>

<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Description</th>
      <th>Balance</th>
      <th>Account</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @synthetic_accounts.each do |synthetic_account| %>
      <tr>
        <td><%= synthetic_account.account.account_type.code %>.<td><%= synthetic_account.account.code %>.</td><td><%= synthetic_account.code %></td>
        <td><%= synthetic_account.name %></td>
        <td><%= synthetic_account.description %></td>
        <td><%= synthetic_account.balance %></td>
        <td><%= synthetic_account.account.name %></td>
        <td><%= link_to 'Show', synthetic_account %></td>
        <td><%= link_to 'Edit', edit_synthetic_account_path(synthetic_account) %></td>
        <td><%= link_to 'Destroy', synthetic_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


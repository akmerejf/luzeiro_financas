<table class="table table-active">
  <thead>
    <tr>
      <th>Custos</th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <% if @custos %>
  <% @custos.each do |custo| %>

  <tbody>
    <tr>
      <td><%= custo.code %></td>
      <td><%= custo.name %></td>
      <td><%= custo.balances.sum(:value) %></td>

    </tr>
  </tbody>
  <% end %>
  <% end %>
  <tbody>
    <tr>
      <td></td>
      <td><strong class="pull-right">Total:</strong></td>
      <td> <%= @custo_total %> </td>
    </tr>
  </tbody>
</table>